@model Aplicacion_Banco.Models.Usuario

@{
    ViewData["Title"] = "ActualizarJefePrestamista";
}

<a class="btn btn-primary" asp-area="" asp-controller="Inversionista" asp-action="Listado">Volver</a>

<h1>Actualizar Jefe de Prestamista</h1>

<form asp-action="ActualizarJefePrestamista">
    <input type="hidden" asp-for="Id" /> <!-- Campo oculto para el ID del prestamista -->

    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Correo" class="control-label">Correo Electrónico</label>
        <input asp-for="Correo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Contrasena" class="control-label">Contraseña</label>
        <input asp-for="Contrasena" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Edad" class="control-label">Edad</label>
        <input asp-for="Edad" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Direccion" class="control-label">Dirección</label>
        <input asp-for="Direccion" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>

@if (ViewBag.Exito != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Exito
    </div>
}